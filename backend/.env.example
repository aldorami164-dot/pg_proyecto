# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================
PORT=3001
NODE_ENV=production

# ================================
# CONFIGURACIÓN DE SUPABASE
# ================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu-anon-key-aqui
SUPABASE_SERVICE_KEY=tu-service-role-key-aqui

# ================================
# BASE DE DATOS (SUPABASE POOLER)
# ================================
# IMPORTANTE: Usar Supabase Pooler para producción
DB_HOST=aws-0-us-east-1.pooler.supabase.com
DB_PORT=6543
DB_NAME=postgres
DB_USER=postgres.tu-proyecto-id
DB_PASSWORD=tu-password-aqui
DB_SSL=true

# ================================
# JWT
# ================================
# Genera secretos seguros con: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=tu-jwt-secret-aqui
JWT_REFRESH_SECRET=tu-jwt-refresh-secret-aqui

# ================================
# CONFIGURACIÓN DE CORS
# ================================
# Para múltiples orígenes, separa con comas:
# Ejemplo: FRONTEND_URL=http://localhost:5173,https://tu-app.vercel.app
FRONTEND_URL=https://tu-frontend.vercel.app

# ================================
# WEBSOCKET (para notificaciones en tiempo real)
# ================================
WS_PORT=3002
